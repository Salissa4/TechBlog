<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ CREATE NEW POST</button>
</section>


{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">EDIT POST</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="../public/js/create-post.js"></script>